@model QPC.Core.ViewModels.QualityControlIndexViewModel

@{
    ViewBag.Title = "Index";
}

<section class="hero">
    <div class="content">
        <div class="title">
            <h1>@ViewBag.Title</h1>
            <hr />
        </div>
        <div class="container">
            <div class="row">
                @using (Html.BeginForm("Index", "QualityControl", FormMethod.Post, new { role = "form" }))
                {
                    @Html.TextBoxFor(m => m.SearchCriteria, new { @id = "search", @type = "search", @placeholer = "search by name or description" })
                    <button type="submit" class="search icon" />
                }
            </div>
            <div class="row">
                <div class="request-control-icon">
                    <a href="@Url.Action("RequestControl")">
                        <div class='plus icon'></div>
                    </a>
                </div>
            </div>
            <table>
                <tr>
                    <th>Control</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Product</th>
                    <th>Defect</th>
                    <th>Desicion</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Controls)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Defect)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desicion)
                        </td>
                        <td>
                            <a href="@Url.Action("UpdateControl", "QualityControl", new { id = item.Id })">
                                <div class="edit-solid icon"></div>
                            </a>
                        </td>
                    </tr>
                }
            </table>        
        </div>
    </div>
</section>

