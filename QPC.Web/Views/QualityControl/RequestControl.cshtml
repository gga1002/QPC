@model QPC.Core.ViewModels.QualityControlViewModel

@{
    ViewBag.Title = "Request Control";
}

<section class="hero">
    <div class="content">
        <h1>@ViewBag.Title</h1>
        <hr />
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="row">
                @Html.LabelFor(m => m.Product)
                @Html.DropDownListFor(m => m.Product, new SelectList(Model.Products, "Id", "Name"), "")
                @Html.ValidationMessageFor(m => m.Product, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.Defect)
                @Html.DropDownListFor(m => m.Defect, new SelectList(Model.Defects, "Id", "Name"), "")
                @Html.ValidationMessageFor(m => m.Defect, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Serial)
                @Html.EditorFor(model => model.Serial, new { htmlAttributes = new { @type = "text", @Placeholder = "Serial Number" } })
                @Html.ValidationMessageFor(model => model.Serial, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @type = "text", @Placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @type = "text", @Placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <input type="submit" value="Create"/>
                <a href="@Url.Action("Index")" class="cancel">Cancel</a>
            </div>
        }
    </div>
    </div>
</section>